<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="grid.twig_extension.class">InterNations\DataGridBundle\Twig\DataGridExtension</parameter>
        <parameter key="grid.base.class">InterNations\DataGridBundle\Grid\Grid</parameter>
        <parameter key="grid.manager.base.class">InterNations\DataGridBundle\Grid\GridManager</parameter>
        <parameter key="grid.column.text.class">InterNations\DataGridBundle\Grid\Column\TextColumn</parameter>
        <parameter key="grid.column.select.class">InterNations\DataGridBundle\Grid\Column\SelectColumn</parameter>
        <parameter key="grid.column.range.class">InterNations\DataGridBundle\Grid\Column\RangeColumn</parameter>
        <parameter key="grid.column.date.class">InterNations\DataGridBundle\Grid\Column\DateColumn</parameter>
        <parameter key="grid.column.blank.class">InterNations\DataGridBundle\Grid\Column\BlankColumn</parameter>
        <parameter key="grid.column.boolean.class">InterNations\DataGridBundle\Grid\Column\BooleanColumn</parameter>
    </parameters>

    <services>
        <service id="grid.twig_extension" class="%grid.twig_extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="router" />
        </service>

        <service id="grid" class="%grid.base.class%" lazy="true">
            <argument type="service" id="service_container" />
        </service>

        <service id="grid.manager" class="%grid.manager.base.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="grid.column.text" class="%grid.column.text.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.select" class="%grid.column.select.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.range" class="%grid.column.range.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.date" class="%grid.column.date.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.blank" class="%grid.column.blank.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.boolean" class="%grid.column.boolean.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

    </services>
</container>
